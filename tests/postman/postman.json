{
  "info": {
    "name": "Rockbridge Donations API",
    "description": "API collection for testing Rockbridge Ministries donation system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      },
      "response": []
    },
    {
      "name": "API Root",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api",
          "host": ["{{baseUrl}}"],
          "path": ["api"]
        }
      },
      "response": []
    },
    {
      "name": "Donations",
      "item": [
        {
          "name": "Create Donation Intent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ministry\": \"Clean Water Initiative\",\n  \"amount\": 50.00,\n  \"currency\": \"USD\",\n  \"donorInfo\": {\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+1234567890\",\n    \"postalCode\": \"12345\"\n  },\n  \"isRecurring\": false,\n  \"message\": \"God bless this mission!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/donations/intent",
              "host": ["{{baseUrl}}"],
              "path": ["api", "donations", "intent"]
            }
          },
          "response": []
        },
        {
          "name": "Confirm Donation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentIntentId\": \"{{paymentIntentId}}\",\n  \"ministry\": \"Clean Water Initiative\",\n  \"donorInfo\": {\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+1234567890\",\n    \"postalCode\": \"12345\"\n  },\n  \"amount\": 50.00,\n  \"currency\": \"USD\",\n  \"isRecurring\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/donations/confirm",
              "host": ["{{baseUrl}}"],
              "path": ["api", "donations", "confirm"]
            }
          },
          "response": []
        },
        {
          "name": "Get Donation by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/donations/{{donationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "donations", "{{donationId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get Recent Donations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/donations/recent?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "donations", "recent"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get All Donations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/donations?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "donations"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Donation Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/donations/analytics/summary?startDate=2024-01-01&endDate=2024-01-31",
              "host": ["{{baseUrl}}"],
              "path": ["api", "donations", "analytics", "summary"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-01-31"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Stripe Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Stripe-Signature",
                "value": "{{stripeSignature}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"evt_1P9h9o2eZvKYlo2CJZ6mYzB7\",\n  \"object\": \"event\",\n  \"api_version\": \"2023-10-16\",\n  \"created\": 1705343683,\n  \"data\": {\n    \"object\": {\n      \"id\": \"pi_3P9h9o2eZvKYlo2C1rFJ7sJX\",\n      \"object\": \"payment_intent\",\n      \"amount\": 5000,\n      \"amount_capturable\": 0,\n      \"amount_received\": 5000,\n      \"application\": null,\n      \"application_fee_amount\": null,\n      \"automatic_payment_methods\": null,\n      \"canceled_at\": null,\n      \"cancellation_reason\": null,\n      \"capture_method\": \"automatic\",\n      \"client_secret\": \"pi_3P9h9o2eZvKYlo2C1rFJ7sJX_secret_xyz\",\n      \"confirmation_method\": \"automatic\",\n      \"created\": 1705343683,\n      \"currency\": \"usd\",\n      \"customer\": \"cus_P9h9o2eZvKYlo2C\",\n      \"description\": \"Donation for Clean Water Initiative\",\n      \"invoice\": null,\n      \"last_payment_error\": null,\n      \"livemode\": false,\n      \"metadata\": {\n        \"ministry\": \"Clean Water Initiative\",\n        \"donorEmail\": \"john.doe@example.com\",\n        \"donorName\": \"John Doe\",\n        \"isRecurring\": \"false\"\n      },\n      \"next_action\": null,\n      \"on_behalf_of\": null,\n      \"payment_method\": \"pm_1P9h9o2eZvKYlo2CJZ6mYzB7\",\n      \"payment_method_options\": {\n        \"card\": {\n          \"installments\": null,\n          \"mandate_options\": null,\n          \"network\": null,\n          \"request_three_d_secure\": \"automatic\"\n        }\n      },\n      \"payment_method_types\": [\n        \"card\"\n      ],\n      \"processing\": null,\n      \"receipt_email\": \"john.doe@example.com\",\n      \"review\": null,\n      \"setup_future_usage\": null,\n      \"shipping\": null,\n      \"source\": null,\n      \"statement_descriptor\": \"ROCKBRIDGE MINISTRIES\",\n      \"statement_descriptor_suffix\": null,\n      \"status\": \"succeeded\",\n      \"transfer_data\": null,\n      \"transfer_group\": null\n    }\n  },\n  \"livemode\": false,\n  \"pending_webhooks\": 1,\n  \"request\": {\n    \"id\": \"req_P9h9o2eZvKYlo2C\",\n    \"idempotency_key\": \"a1b2c3d4-e5f6-7890-g1h2-i3j4k5l6m7n8\"\n  },\n  \"type\": \"payment_intent.succeeded\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/stripe",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "stripe"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Set timestamp for signature generation",
          "const timestamp = Math.floor(Date.now() / 1000);",
          "pm.globals.set('timestamp', timestamp);"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Tests for Health Check endpoint",
          "pm.test('Health Check Status', function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test('Health Check Response', function () {",
          "    var jsonData = pm.response.json();",
          "    pm.expect(jsonData.status).to.eql('healthy');",
          "    pm.expect(jsonData).to.have.property('database');",
          "    pm.expect(jsonData).to.have.property('stripe');",
          "});",
          "",
          "// Store payment intent ID from donation intent response",
          "if (pm.response.code === 201 && pm.response.json().data) {",
          "    pm.globals.set('paymentIntentId', pm.response.json().data.paymentIntentId);",
          "    pm.globals.set('ministry', pm.response.json().data.ministry);",
          "}",
          "",
          "// Store donation ID from confirm donation response",
          "if (pm.response.code === 201 && pm.response.json().data) {",
          "    pm.globals.set('donationId', pm.response.json().data.donationId);",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
}