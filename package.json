{
  "name": "rockbridge-backend-api",
  "version": "1.0.0",
  "description": "High-performance donation processing API for Rockbridge Ministries",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node src/seeds/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t rockbridge-api .",
    "docker:run": "docker run -p 5000:5000 rockbridge-api"
  },
  "keywords": [
    "donations",
    "stripe",
    "mongodb",
    "express",
    "api"
  ],
  "author": "Rockbridge Ministries",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "mongoose-paginate-v2": "^1.7.4",
    "nodemailer": "^6.10.1",
    "rate-limit-redis": "^4.2.2",
    "stripe": "^14.9.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
